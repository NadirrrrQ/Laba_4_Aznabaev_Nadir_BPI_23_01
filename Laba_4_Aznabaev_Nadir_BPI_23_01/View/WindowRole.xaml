<Window x:Class="Laba_4_Aznabaev_Nadir_BPI_23_01.View.WindowRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba_4_Aznabaev_Nadir_BPI_23_01.View" xmlns:viewmodel="clr-namespace:Laba_4_Aznabaev_Nadir_BPI_23_01.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:RoleViewModel}"
        mc:Ignorable="d"
        Title="Должности" Height="450" Width="800" MinHeight="400" MinWidth="750">

    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="Добавить" Width="100" Margin="5" Command="{Binding AddRole}"/>
            <Button Content="Редактировать" Width="100" Margin="5" Command="{Binding EditRole}"/>
            <Button Content="Удалить" Width="100" Margin="5" Command="{Binding DeleteRole}"/>
        </StackPanel>
        <ListView x:Name="Role" ItemsSource="{Binding ListRole}" Background="#FFD3CDCD" SelectedItem="{Binding SelectedRole}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Код" Width="50" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Наименование должности" DisplayMemberBinding="{Binding NameRole}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
  
</Window>
