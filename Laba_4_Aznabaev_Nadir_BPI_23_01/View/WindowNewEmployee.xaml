<Window x:Class="Laba_4_Aznabaev_Nadir_BPI_23_01.WindowNewEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba_4_Aznabaev_Nadir_BPI_23_01" xmlns:viewmodel="clr-namespace:Laba_4_Aznabaev_Nadir_BPI_23_01.ViewModel" xmlns:model="clr-namespace:Laba_4_Aznabaev_Nadir_BPI_23_01.Model" d:DataContext="{d:DesignInstance Type=model:PersonDpo}"
        mc:Ignorable="d"
        Title="WindowNewEmployee" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Код:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id}" IsReadOnly="True"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Должность:"/>
        <ComboBox x:Name="CbRole" Grid.Row="1" Grid.Column="1" 
                  DisplayMemberPath="NameRole" SelectedValue="{Binding RoleName, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="NameRole"/>
       

        <Label Grid.Row="2" Grid.Column="0" Content="Имя:"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding FirstName}"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Фамилия:"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding LastName}"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Дата рождения:"/>
        <DatePicker Grid.Row="4" Grid.Column="1" SelectedDate="{Binding Birthday, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>