<Window x:Class="Laba_4_Aznabaev_Nadir_BPI_23_01.WindowNewEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba_4_Aznabaev_Nadir_BPI_23_01" xmlns:viewmodel="clr-namespace:Laba_4_Aznabaev_Nadir_BPI_23_01.ViewModel" xmlns:model="clr-namespace:Laba_4_Aznabaev_Nadir_BPI_23_01.Model" d:DataContext="{d:DesignInstance Type=model:PersonDpo}"
        mc:Ignorable="d"
        Title="WindowNewEmployee" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0">
            <TextBlock Text="Фамилия:"/>
            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,8,0,0">
            <TextBlock Text="Имя:"/>
            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,8,0,0">
            <TextBlock Text="Должность:"/>
            <ComboBox x:Name="CbRole" DisplayMemberPath="NameRole" SelectedIndex="0"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="0,8,0,0">
            <TextBlock Text="Дата рождения:"/>
            <DatePicker SelectedDate="{Binding Birthday}" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="75" Margin="5" Click="Ok_Click"/>
            <Button Content="Отмена" Width="75" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
